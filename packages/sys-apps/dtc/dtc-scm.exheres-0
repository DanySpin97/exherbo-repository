SCM_REPOSITORY="git://git.kernel.org/pub/scm/utils/dtc/dtc.git"
require scm-git

SUMMARY="Device Tree Compiler"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"

src_install() {
    MY_PARAMS=(
        LIBDIR="${IMAGE}"/usr/$(exhost --target)/lib
        PREFIX="${IMAGE}"/usr/$(exhost --target)
    )

    emake install "${MY_PARAMS[@]}"
}

